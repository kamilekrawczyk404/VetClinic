<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic"
        xmlns:view="clr-namespace:VetClinic.MVVM.View"
        mc:Ignorable="d"
        Height="600" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border CornerRadius="20" Background="{StaticResource Turquise}" ClipToBounds="True">
        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <view:NavigationView Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"/>

            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Background="{StaticResource White}" CornerRadius="12">
                <StackPanel>
                    <view:WindowButtons Margin="10"/>
                    <ContentControl Content="{Binding Navigation.CurrentView}" Margin="10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
