<Window x:Class="VetClinic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic"
        mc:Ignorable="d"
        Height="600" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >
    <Border CornerRadius="20" Background="{StaticResource Turquise}" ClipToBounds="True">
        <Grid ClipToBounds="True" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" ClipToBounds="True">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" ClipToBounds="True">
                    <Button x:Name="MinimizeButton" Style="{StaticResource MinimizeButtonStyle}" Command="{Binding HideCommand}"/>
                    <Button x:Name="HideButton" Style="{StaticResource HideButtonStyle}" Command="{Binding MaximizeMinimizeCommand }"/>
                    <Button x:Name="CloseButton" Style="{StaticResource CloseButtonStyle}" Command="{Binding CloseCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
