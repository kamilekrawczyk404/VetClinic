<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="SecondaryTextBase">
        <Setter Property="Foreground" Value="{DynamicResource LightGray}"/>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource SecondaryTextBase}" x:Key="SmallSecondaryText">
        <Setter Property="FontSize" Value="12"/>
    </Style>
</ResourceDictionary>