<UserControl x:Class="VetClinic.MVVM.View.DoctorList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Doctor list" 
                       Style="{StaticResource Header}"
                       FontSize="20"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="Add new doctor"
                    Command="{Binding AddDoctorCommand}"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource SubmitButton}"
                    Cursor="Hand"/>

        </Grid>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20,0,20,20">
            <ItemsControl ItemsSource="{Binding Doctors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource BorderDefault}" 
                                Margin="0,0,0,10"
                                Cursor="Hand">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" 
                                       Source="/Images/doctor-active.png"
                                       Height="80" Width="80" 
                                       Margin="0,0,20,0"
                                       VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource Header}"
                                               FontSize="16"
                                               Margin="0,0,0,5">
                                        <Run Text="{Binding Name}"/>
                                        <Run Text="{Binding Surname}"/>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Specialization}" 
                                               FontSize="14"
                                               Margin="0,0,0,8"/>

                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap"
                                               FontSize="12"
                                               MaxHeight="40"/>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" 
                                            Orientation="Vertical"
                                            VerticalAlignment="Center">

                                    <StackPanel Visibility="{Binding DataContext.IsClient, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                     

                                        <Button Content="Show opinions"
                                                Command="{Binding DataContext.ViewOpinionsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SubmitButton}"
                                                Cursor="Hand"
                                                Margin="2,2,2,2">
                                        </Button>

                                    </StackPanel>


                                    <StackPanel Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button Content="Edytuj"
                                                Command="{Binding DataContext.EditDoctorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SubmitButton}"
                                                Cursor="Hand"
                                                Margin="2,2,2,2">
                                        </Button>

                                        <Button Content="Usuń"
                                                Command="{Binding DataContext.DeleteDoctorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}" 
                                                Style="{StaticResource SubmitButton}"
                                                Cursor="Hand"
                                                Margin="2,2,2,2">
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding Doctors.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="No doctors in the system"
                       Style="{StaticResource Header}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Opacity="0.6"/>
        </StackPanel>
    </Grid>
</UserControl>