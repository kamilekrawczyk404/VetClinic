<UserControl x:Class="VetClinic.MVVM.View.Dashboard.AppointmentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:VetClinic.Controls"
             xmlns:local="clr-namespace:VetClinic.MVVM.View.Dashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource BorderDefault}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Margin="5,5,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Pet Information" Style="{StaticResource MediumHeader}"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <controls:AppointmentStatusComboBox Status="{Binding Appointment.Appointment.AppointmentStatus, Mode=TwoWay}" IsEditable="True" Statuses="{Binding Appointment.Statuses}"/>
                    <Button Margin="5,0" Style="{StaticResource ListViewButton}" Command="{Binding ExitAppointmentCommand}">Back to dashboard</Button>
                    <Button Style="{StaticResource ListViewButton}" Command="{Binding CompleteAppointmentCommand}">Complete appointment</Button>
                </StackPanel>
            </Grid>
            
            <controls:PetCard Grid.Row="1" Pet="{Binding Appointment.Pet}"/>

            <Grid Grid.Row="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Style="{StaticResource MediumHeader}" Text="Appointment Information" Grid.ColumnSpan="2" Margin="0,0,0,10"/>
                
                <Border Grid.Row="1" Style="{StaticResource BorderDefault}" Padding="5" Margin="0,0,2.5,0" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Reason for visit: " FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding Appointment.Appointment.ReasonForVisit}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Grid.Column="1" Padding="5" Margin="2.5,0,0,0" Style="{StaticResource BorderDefault}">
                    <StackPanel>
                        <TextBlock Text="Observation" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource TextBoxTheme}"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="2" Grid.ColumnSpan="2">
                    <TextBlock Text="Diagnosis"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
