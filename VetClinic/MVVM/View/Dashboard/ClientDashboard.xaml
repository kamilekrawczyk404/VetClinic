<UserControl x:Class="VetClinic.MVVM.View.Dashboard.ClientDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinic.MVVM.View.Dashboard"
             xmlns:controls="clr-namespace:VetClinic.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sekcja powitalna -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Style="{StaticResource Header}" Text="Witaj, "/>
            <TextBlock Style="{StaticResource Header}" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <TextBlock Grid.Column="1" Margin="10,0,0,10" Text="Nadchodzące wizyty" Style="{StaticResource MediumHeader}" VerticalAlignment="Center"/>

        <!-- Lista nadchodzących wizyt -->
        <controls:NextAppointmentsListView 
            Margin="10,0,0,0" 
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.RowSpan="3" 
            ItemsSource="{Binding UpcomingAppointments, Mode=TwoWay}"  
            Statuses="{Binding Statuses, Mode=TwoWay}"
            HorizontalAlignment="Stretch"
            />

        <!-- Kafelki statystyk -->
        <Grid Margin="0,0,0,10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <controls:DashboardItem 
                Title="Moje zwierzęta" 
                Value="{Binding PetsCount}" 
                ImageSource="/Images/DashboardItem/pet-item.png"
                ShowTrendLine="False"/>

            <controls:DashboardItem 
                Margin="10,0,0,0" 
                Grid.Column="1" 
                Title="Nadchodzące wizyty" 
                Value="{Binding UpcomingAppointmentsCount}" 
                ImageSource="/Images/DashboardItem/appointment-item.png"
                ShowTrendLine="False"/>

            <controls:DashboardItem 
                Margin="10,0,0,0" 
                Grid.Column="2" 
                Title="Aktywne recepty" 
                Value="{Binding ActivePrescriptionsCount}" 
                ImageSource="/Images/DashboardItem/prescription-item.png"
                ShowTrendLine="False"/>
        </Grid>

        <!-- Główna zawartość - sekcja zwierząt i ostatnie opinie -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Sekcja "Twoje zwierzęta" -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Twoje zwierzęta" Style="{StaticResource MediumHeader}" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding ClientPets}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Margin="0,0,10,10" 
                                        Padding="15"
                                        Height="Auto">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                                    </Border.Effect>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.SelectPetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" 
                                               Source="{Binding Pet.Species, Converter={StaticResource SpeciesToImageSourceConverter}}" 
                                               Height="50" Width="50" 
                                               Margin="0,0,15,0"
                                               VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                       FontWeight="Bold" 
                                                       FontSize="16"
                                                       Margin="0,0,0,6"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <Image Source="/Images/PetInformation/species.png" 
                                                       Height="14" Width="14" 
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding SpeciesName}" 
                                                           FontSize="12" 
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                <Image Source="/Images/PetInformation/breed.png" 
                                                       Height="14" Width="14" 
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding BreedName}" 
                                                           FontSize="12" 
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Images/PetInformation/weight.png" 
                                                       Height="14" Width="14" 
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding WeightText}" 
                                                           FontSize="12" 
                                                           Foreground="Gray"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Sekcja ostatnich opinii -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Ostatnie twoje opinie" Style="{StaticResource MediumHeader}" Margin="0,0,0,10"/>

                <!-- Lista ostatnich opinii -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                              Visibility="{Binding HasOpinions, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ItemsControl ItemsSource="{Binding LastOpinions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1" 
                                        CornerRadius="8" 
                                        Padding="15"
                                        Margin="0,0,0,10"
                                        Cursor="Hand">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                                    </Border.Effect>
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" 
                                                      Command="{Binding DataContext.ViewOpinionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Grid.Column="0" 
                                               Source="/Images/DashboardItem/opinion-item.png" 
                                               Height="40" Width="40" 
                                               Margin="0,0,15,0"
                                               VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5" >
                                                <TextBlock Text="{Binding DoctorName}" 
                                                           FontWeight="Bold" 
                                                           FontSize="14"
                                                           VerticalAlignment="Center"/>

                                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                                    <TextBlock Text="★" FontSize="14" Margin="1,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#DDD"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Opinion.Rating, Converter={StaticResource StarRatingConverter}, ConverterParameter=1}" 
                                                                                 Value="True">
                                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="★" FontSize="14" Margin="1,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#DDD"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Opinion.Rating, Converter={StaticResource StarRatingConverter}, ConverterParameter=2}" 
                                                                                 Value="True">
                                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="★" FontSize="14" Margin="1,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#DDD"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Opinion.Rating, Converter={StaticResource StarRatingConverter}, ConverterParameter=3}" 
                                                                                 Value="True">
                                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="★" FontSize="14" Margin="1,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#DDD"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Opinion.Rating, Converter={StaticResource StarRatingConverter}, ConverterParameter=4}" 
                                                                                 Value="True">
                                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>

                                                    <TextBlock Text="★" FontSize="14" Margin="1,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#DDD"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Opinion.Rating, Converter={StaticResource StarRatingConverter}, ConverterParameter=5}" 
                                                                                 Value="True">
                                                                        <Setter Property="Foreground" Value="#FFD700"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <TextBlock Text="{Binding CommentPreview}" 
                                                       TextWrapping="Wrap"
                                                       FontSize="12" 
                                                       Foreground="#666"
                                                       Margin="0,0,0,5"
                                                       />

                                            <TextBlock Text="{Binding TimeAgoText}" 
                                                       FontSize="11" 
                                                       Foreground="#999"
                                                      />
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                                   Text="›" 
                                                   FontSize="20" 
                                                   Foreground="#CCC"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Komunikat o braku opinii -->
                <Border Grid.Row="1" 
                        Background="#F9F9F9" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="20"
                        Visibility="{Binding HasOpinions, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="/Images/DashboardItem/opinion-item.png"
                               Height="50" Width="50" 
                               Margin="0,0,0,10"
                               Opacity="0.5"/>
                        <TextBlock Text="Brak wystawionych opinii" 
                                   FontSize="14" 
                                   Foreground="#999"/>
                        <TextBlock Text="Możesz wystawić opinię o lekarzu" 
                                   FontSize="12" 
                                   Foreground="#BBB"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>