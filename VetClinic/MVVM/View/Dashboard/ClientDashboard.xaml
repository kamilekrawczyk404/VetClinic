<UserControl x:Class="VetClinic.MVVM.View.Dashboard.ClientDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinic.MVVM.View.Dashboard"
             xmlns:controls="clr-namespace:VetClinic.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sekcja powitalna -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Style="{StaticResource Header}" Text="Witaj, "/>
            <TextBlock Style="{StaticResource Header}" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- Nadchodzące wizyty - nagłówek -->
        <TextBlock Grid.Column="1" Margin="10,0,0,10" Text="Nadchodzące wizyty" Style="{StaticResource MediumHeader}" VerticalAlignment="Center"/>

        <!-- Lista nadchodzących wizyt -->
        <controls:NextAppointmentsListView 
            Margin="10,0,0,0" 
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.RowSpan="3" 
            ItemsSource="{Binding UpcomingAppointments, Mode=TwoWay}"  
            Statuses="{Binding Statuses, Mode=TwoWay}"
            HorizontalAlignment="Stretch"
            OnAppointmentClicked="{Binding SelectAppointmentCommand}"
            />

        <!-- Kafelki statystyk -->
        <Grid Margin="0,0,0,10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <controls:DashboardItem 
                Title="Moje zwierzęta" 
                Value="{Binding PetsCount}" 
                Ratio="{Binding PetsRatio}" 
                ImageSource="/Images/DashboardItem/pets-item.png"/>

            <controls:DashboardItem 
                Margin="10,0,0,0" 
                Grid.Column="1" 
                Title="Nadchodzące wizyty" 
                Value="{Binding UpcomingAppointmentsCount}" 
                Ratio="{Binding UpcomingAppointmentsRatio}" 
                ImageSource="/Images/DashboardItem/appointment-item.png"/>

            <controls:DashboardItem 
                Margin="10,0,0,0" 
                Grid.Column="2" 
                Title="Dni od ostatniej wizyty" 
                Value="{Binding DaysSinceLastVisit}" 
                Ratio="{Binding LastVisitRatio}" 
                ImageSource="/Images/DashboardItem/calendar-item.png"/>
        </Grid>

        <!-- Sekcja "Moje zwierzęta" -->
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Moje zwierzęta" Style="{StaticResource MediumHeader}" Margin="0,0,0,10"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ClientPets}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Margin="0,0,10,10" 
                                    Padding="15"
                                    Height="Auto"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="5"/>
                                </Border.Effect>
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" 
                                                  Command="{Binding DataContext.SelectPetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Pet Image -->
                                    <Image Grid.Column="0" 
                                           Source="{Binding Pet.Species, Converter={StaticResource SpeciesToImageSourceConverter}}" 
                                           Height="50" Width="50" 
                                           Margin="0,0,15,0"
                                           VerticalAlignment="Center"/>

                                    <!-- Pet Information -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <!-- Pet Name -->
                                        <TextBlock Text="{Binding DisplayName}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Margin="0,0,0,6"/>

                                        <!-- Species -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <Image Source="/Images/PetInformation/species.png" 
                                                   Height="14" Width="14" 
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SpeciesName}" 
                                                       FontSize="12" 
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Breed -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                            <Image Source="/Images/PetInformation/breed.png" 
                                                   Height="14" Width="14" 
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding BreedName}" 
                                                       FontSize="12" 
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Weight -->
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Images/PetInformation/weight.png" 
                                                   Height="14" Width="14" 
                                                   Margin="0,0,6,0"
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding WeightText}" 
                                                       FontSize="12" 
                                                       Foreground="Gray"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>