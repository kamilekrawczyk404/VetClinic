<UserControl x:Class="VetClinic.MVVM.View.PetList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
            >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Style="{StaticResource Header}"
                       FontSize="20"
                       VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0}">
                        <Binding Source="Lista zwierząt"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>

            <Button Grid.Column="1"
                    Content="Dodaj zwierzę"
                    Command="{Binding AddPetCommand}"
                    Visibility="{Binding CanManagePets, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Style="{StaticResource SubmitButton}"
                    Cursor="Hand"/>
        </Grid>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20,0,20,20">
            <ItemsControl ItemsSource="{Binding Pets}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="10">
                            <Border Style="{StaticResource BorderDefault}">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Pet image and name -->
                                    <Grid Grid.Column="0"
                                          VerticalAlignment="Center" 
                                          HorizontalAlignment="Center" 
                                          Margin="15,15,15,15"
                                          MinWidth="150">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Image Source="{Binding Species, Converter={StaticResource SpeciesToImageSourceConverter}}" 
                                               Height="80" Width="80" />
                                        <TextBlock Style="{StaticResource MediumHeader}"  
                                                   Grid.Row="1" 
                                                   Margin="0,10,0,0" 
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   Text="{Binding Name}"/>
                                    </Grid>

                                    <!-- Pet details -->
                                    <Grid Grid.Column="1" Margin="15" VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <!-- Left column -->
                                        <StackPanel Margin="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Image Source="/Images/PetInformation/species.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="Species: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Species}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" Margin="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Image Source="/Images/PetInformation/breed.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="Breed: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Breed}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Images/PetInformation/weight.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="Weight: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Weight}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Right column -->
                                        <StackPanel Grid.Column="1" Margin="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Image Source="/Images/PetInformation/gender.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="Gender: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding Gender}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Grid.Row="1" Margin="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <Image Source="/Images/PetInformation/date_of_birth.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="Birthday: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding DateOfBirth, Converter={StaticResource DateToStringConverter}}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="0" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Images/PetInformation/created_at.png" 
                                                       Height="18" Width="18" 
                                                       Margin="0,0,8,0"
                                                       VerticalAlignment="Center"/>
                                                <TextBlock Text="With us since: " 
                                                           FontWeight="SemiBold"
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding CreatedAt, Converter={StaticResource DateToStringConverter}}" 
                                                           FontSize="16"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Buttons on the right side -->
                                    <StackPanel Grid.Column="2"
                                               Orientation="Vertical"
                                               VerticalAlignment="Center"
                                               Margin="15,15,15,15">

                                        <!-- Edit Button - visible for admins and when user owns the pet -->
                                        <Button Content="✏️ Edytuj"
                                                Command="{Binding DataContext.EditPetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource SubmitButton}"
                                                MinWidth="80"      
                                                Margin="0,0,0,5">
                                            <Button.Visibility>
                                                <Binding Path="DataContext.CanManagePets" 
                                                       RelativeSource="{RelativeSource AncestorType=UserControl}" 
                                                       Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                            </Button.Visibility>
                                        </Button>

                                        <!-- Delete Button - visible for admins and when user owns the pet -->
                                        <Button Content="🗑️ Usuń"
                                                Command="{Binding DataContext.DeletePetCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="{StaticResource Red}" 
                                                Style="{StaticResource SubmitButton}"
                                                MinWidth="80"
                                                Margin="0">
                                            <Button.Visibility>
                                                <Binding Path="DataContext.CanManagePets" 
                                                       RelativeSource="{RelativeSource AncestorType=UserControl}" 
                                                       Converter="{StaticResource BooleanToVisibilityConverter}"/>
                                            </Button.Visibility>
                                        </Button>
                                    </StackPanel>

                                    <!-- Owner Information (visible for admin) - now inside border -->
                                    <StackPanel Grid.Row="1" 
                                               Grid.ColumnSpan="3"
                                               Orientation="Horizontal"
                                               Margin="15,0,15,15"
                                               Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Image Source="/Images/owner.png" 
                                               Height="18" Width="18" 
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                        <TextBlock Text="Właściciel: " 
                                                   FontWeight="SemiBold"
                                                   FontSize="16"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock FontSize="16"
                                                   VerticalAlignment="Center">
                                            <Run Text="{Binding User.Name}"/>
                                            <Run Text="{Binding User.Surname}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty State -->
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding Pets.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock Text="Brak zwierząt w systemie"
                       Style="{StaticResource Header}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Opacity="0.6"/>
            <TextBlock Text="Dodaj pierwsze zwierzę, aby rozpocząć"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Opacity="0.5"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Modal Overlays -->
        <!-- Add/Edit Pet Modal -->
        <Grid x:Name="PetEditModal" 
              Grid.RowSpan="2"
              Background="#80000000"
              Visibility="{Binding IsEditingPet, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White"
                    CornerRadius="10"
                    MinWidth="500"
                    MaxWidth="600"
                    Padding="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                 >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="{Binding EditingPetTitle}" 
                                   Style="{StaticResource Header}"
                                   FontSize="18"
                                   VerticalAlignment="Center"/>
                        <Button Content="✕"
                                Command="{Binding CancelEditCommand}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Cursor="Hand"
                                Margin="20,0,0,0"
                                Width="30"
                                Height="30"/>
                    </StackPanel>

                    <!-- Form -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <StackPanel>
                            <!-- Name -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Imię:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding EditingPet.Name, UpdateSourceTrigger=PropertyChanged}"
                                         />
                            </Grid>

                            <!-- Species -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Gatunek:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" 
                                         SelectedValue="{Binding EditingPet.Species}"
                                         SelectedValuePath="Content"
                                          >
                                    <ComboBoxItem Content="Pies"/>
                                    <ComboBoxItem Content="Kot"/>
                                    <ComboBoxItem Content="Królik"/>
                                    <ComboBoxItem Content="Ptak"/>
                                    <ComboBoxItem Content="Inne"/>
                                </ComboBox>
                            </Grid>

                            <!-- Breed -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Rasa:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding EditingPet.Breed, UpdateSourceTrigger=PropertyChanged}"
                                        />
                            </Grid>

                            <!-- Weight -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Waga (kg):" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" 
                                         Text="{Binding EditingPet.Weight, UpdateSourceTrigger=PropertyChanged}"
                                        />
                            </Grid>

                            <!-- Gender -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Płeć:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" 
                                          SelectedValue="{Binding EditingPet.Gender}"
                                          SelectedValuePath="Content">
                                    <ComboBoxItem Content="Male"/>
                                    <ComboBoxItem Content="Female"/>
                                    <ComboBoxItem Content="Neutered"/>
                                    <ComboBoxItem Content="Spayed"/>
                                </ComboBox>
                            </Grid>

                            <!-- Date of Birth -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Data urodzenia:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <DatePicker Grid.Column="1" 
                                            SelectedDate="{Binding EditingPet.DateOfBirth}"
                                          />
                            </Grid>

                            <!-- Owner (only for admin when adding) -->
                            <Grid Margin="0,0,0,15"
                                  Visibility="{Binding ShowOwnerSelection, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Właściciel:" 
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding AvailableOwners}"
                                          SelectedItem="{Binding EditingPet.User}"
                                          DisplayMemberPath="FullName"
                                         />
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0">
                        <Button Content="Anuluj"
                                Command="{Binding CancelEditCommand}"
                                Style="{StaticResource SubmitButton}"
                                Background="{StaticResource Red}"
                                Margin="0,0,10,0"/>
                        <Button Content="Zapisz"
                                Command="{Binding SavePetCommand}"
                                Style="{StaticResource SubmitButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Delete Confirmation Modal -->
        <Grid Grid.RowSpan="2"
              Background="#80000000"
              Visibility="{Binding IsConfirmingDelete, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="White"
                    CornerRadius="10"
                    MinWidth="400"
                    Padding="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Potwierdzenie usunięcia" 
                               Style="{StaticResource Header}"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <TextBlock HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,20">
                        <Run Text="Czy na pewno chcesz usunąć zwierzę"/>
                        <Run Text="{Binding PetToDelete.Name}" FontWeight="Bold"/>
                        <Run Text="?"/>
                        <LineBreak/>
                        <Run Text="Tej operacji nie można cofnąć." FontSize="12" Foreground="Gray"/>
                    </TextBlock>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button Content="Anuluj"
                                Command="{Binding CancelDeleteCommand}"
                                Style="{StaticResource SubmitButton}"
                                Margin="0,0,10,0"/>
                        <Button Content="Usuń"
                                Command="{Binding ConfirmDeleteCommand}"
                                Background="{StaticResource Red}"
                                Style="{StaticResource SubmitButton}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>