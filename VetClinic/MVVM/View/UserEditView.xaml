<UserControl
    x:Class="VetClinic.MVVM.View.UserEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Margin="0,0,20,0"
                Command="{Binding GoBackCommand}"
                Content="← Back"
                Cursor="Hand"
                Style="{StaticResource SubmitButton}" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Style="{StaticResource Header}"
                Text="{Binding Title}" />
        </Grid>

        <Grid Grid.Row="1" Margin="5,5,5,5">
            <Border
                MaxWidth="1100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource BorderDefault}">
                <Grid Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="280" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Column - User Image and Basic Info  -->
                    <StackPanel Grid.Column="0">
                        <Grid Margin="0,0,0,20" HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Image
                                Width="120"
                                Height="120"
                                Margin="0,0,0,10"
                                Source="/Images/patient-active.png" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                Style="{StaticResource MediumHeader}"
                                TextWrapping="Wrap">
                                <Run Text="{Binding EditingUser.Name, FallbackValue='New'}" />
                                <Run Text="{Binding EditingUser.Surname, FallbackValue='User'}" />
                            </TextBlock>
                        </Grid>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Active Status" />
                            <CheckBox
                                Height="35"
                                VerticalAlignment="Center"
                                Content="Is Active"
                                FontSize="14"
                                IsChecked="{Binding EditingUser.IsActive}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Date of Birth *" />
                            <DatePicker
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                SelectedDate="{Binding EditingUser.DateOfBirth}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="User Role *" />
                            <ComboBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                ItemsSource="{Binding UserRoles}"
                                SelectedItem="{Binding EditingUser.Role}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Middle Column - Personal Information  -->
                    <StackPanel Grid.Column="2" Margin="0,35,0,35">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="First Name *" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                Text="{Binding EditingUser.Name, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Last Name *" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                Text="{Binding EditingUser.Surname, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Email Address *" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                Text="{Binding EditingUser.Email, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Phone Number" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                Text="{Binding EditingUser.TelephoneNumber, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Right Column - Account Information  -->
                    <StackPanel Grid.Column="4" Margin="0,35,0,35">
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Password" />
                            <PasswordBox
                                x:Name="PasswordBox"
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                PasswordChanged="PasswordBox_PasswordChanged" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="10"
                                Foreground="Gray"
                                Text="Leave empty to keep current password"
                                Visibility="{Binding IsAddingUser, Converter={StaticResource InverseBooleanToVisibilityConverter}}" />
                            <TextBlock
                                Margin="0,2,0,0"
                                FontSize="10"
                                Foreground="Gray"
                                Text="Password is required for new users"
                                Visibility="{Binding IsAddingUser, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Visibility="{Binding IsEditingExistingUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Account Created" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding EditingUser.CreatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" />
                        </StackPanel>

                        <StackPanel Margin="0,0,0,15" Visibility="{Binding IsEditingExistingUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                Margin="0,0,0,3"
                                FontSize="12"
                                FontWeight="SemiBold"
                                Text="Last Login" />
                            <TextBox
                                Height="35"
                                Padding="8,6"
                                FontSize="14"
                                IsReadOnly="True"
                                Text="{Binding EditingUser.LastLogin, StringFormat='{}{0:dd/MM/yyyy HH:mm}', FallbackValue='Never'}" />
                        </StackPanel>
                    </StackPanel>

                    <!--  Far Right Column - Validation Errors  -->
                    <StackPanel Grid.Column="6" Margin="0,35,0,35">
                        <Border
                            MaxHeight="300"
                            Padding="12"
                            Background="{StaticResource LightRed}"
                            CornerRadius="5"
                            Visibility="{Binding HasValidationErrors, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,8"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource White}"
                                        Text="Validation Errors:" />
                                    <ItemsControl ItemsSource="{Binding ValidationErrors}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="0,1" Orientation="Horizontal">
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource White}"
                                                        Text="• " />
                                                    <TextBlock
                                                        FontSize="11"
                                                        Foreground="{StaticResource White}"
                                                        Text="{Binding}"
                                                        TextWrapping="Wrap" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>

                        <!--  Info Panel  -->
                        <Border
                            Margin="0,20,0,0"
                            Padding="12"
                            Background="{StaticResource BorderStatusInProgress}"
                            CornerRadius="5"
                            Visibility="{Binding HasValidationErrors, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource White}"
                                    Text="ℹ️ Information" />
                                <TextBlock
                                    Margin="0,1"
                                    FontSize="10"
                                    Foreground="{StaticResource White}"
                                    Text="• All fields marked with * are required"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,1"
                                    FontSize="10"
                                    Foreground="{StaticResource White}"
                                    Text="• Email must be unique"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,1"
                                    FontSize="10"
                                    Foreground="{StaticResource White}"
                                    Text="• User must be at least 13 years old"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,1"
                                    FontSize="10"
                                    Foreground="{StaticResource White}"
                                    Text="• Phone number should be at least 9 digits"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,1"
                                    FontSize="10"
                                    Foreground="{StaticResource White}"
                                    Text="• Password required for new users"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Footer Buttons  -->
        <Border Grid.Row="2" Padding="20">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Height="40"
                    MinWidth="120"
                    Margin="0,0,15,0"
                    Background="{StaticResource Red}"
                    Command="{Binding CancelCommand}"
                    Content="❌ Cancel"
                    Cursor="Hand"
                    Style="{StaticResource SubmitButton}" />
                <Button
                    Height="40"
                    MinWidth="120"
                    Command="{Binding SaveCommand}"
                    Content="{Binding SaveButtonText}"
                    Cursor="Hand"
                    Style="{StaticResource SubmitButton}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>