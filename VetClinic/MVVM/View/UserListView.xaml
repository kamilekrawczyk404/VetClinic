<UserControl
    x:Class="VetClinic.MVVM.View.UserListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="24"
                Style="{StaticResource Header}"
                Text="User list" />

            <Button
                Grid.Column="1"
                Command="{Binding AddUserCommand}"
                Content="Add new user"
                Cursor="Hand"
                Style="{StaticResource SubmitButton}"
                Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}" />

        </Grid>

        <ScrollViewer
            Grid.Row="1"
            Margin="20,0,20,20"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="0,0,0,10"
                            Cursor="Hand"
                            Style="{StaticResource BorderDefault}">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid
                                    Grid.Column="0"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center">
                                    <Image
                                        Width="80"
                                        Height="80"
                                        Source="/Images/patient-active.png" />
                                    <!--  Status indicator  -->
                                    <Ellipse
                                        Width="16"
                                        Height="16"
                                        Margin="0,0,-5,-5"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Fill="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Stroke="White"
                                        StrokeThickness="2" />
                                </Grid>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,5"
                                        FontSize="16"
                                        Style="{StaticResource Header}">
                                        <Run Text="{Binding Name}" />
                                        <Run Text="{Binding Surname}" />
                                    </TextBlock>

                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="{Binding Role}"
                                            Text="{Binding Role}" />
                                        <TextBlock
                                            Margin="5,0"
                                            FontSize="14"
                                            Text=" • " />
                                        <TextBlock
                                            FontSize="14"
                                            Opacity="0.8"
                                            Text="{Binding Email}" />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="12"
                                            Opacity="0.7"
                                            Text="📞 " />
                                        <TextBlock
                                            FontSize="12"
                                            Opacity="0.7"
                                            Text="{Binding TelephoneNumber, FallbackValue='No phone'}" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="12"
                                            Opacity="0.7"
                                            Text=" • 📅 " />
                                        <TextBlock
                                            FontSize="12"
                                            Opacity="0.7"
                                            Text="{Binding DateOfBirth, StringFormat='{}{0:dd/MM/yyyy}'}" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Action Buttons  -->
                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                                    <!--<Button
                                        Margin="2,2,2,2"
                                        Command="{Binding DataContext.ViewUserDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Content="👤 View details"
                                        Cursor="Hand"
                                        Style="{StaticResource SubmitButton}" />-->

                                    <StackPanel Visibility="{Binding DataContext.IsAdmin, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <Button
                                            Margin="2,2,2,2"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="✏️ Edit"
                                            Cursor="Hand"
                                            Style="{StaticResource SubmitButton}" />

                                        <Button
                                            Margin="2,2,2,2"
                                            Background="{StaticResource Red}"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Content="🗑️ Inactivate"
                                            Cursor="Hand"
                                            Style="{StaticResource SubmitButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  Empty State  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding Users.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="16"
                Opacity="0.6"
                Style="{StaticResource Header}"
                Text="No users in the system" />
        </StackPanel>
    </Grid>
</UserControl>