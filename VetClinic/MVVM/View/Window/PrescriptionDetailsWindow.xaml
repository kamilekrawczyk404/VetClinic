<Window x:Class="VetClinic.MVVM.View.Window.PrescriptionDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VetClinic.MVVM.View.Window"
        xmlns:input="clr-namespace:VetClinic.Controls.Input"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="PrescriptionDetailsWindow" Height="600" Width="900">
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Creating prescription" Style="{StaticResource Header}" Visibility="{Binding IsEditing, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    <TextBlock Text="Editing prescription" Style="{StaticResource Header}" Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Button Style="{StaticResource SubmitButton}" Content="Save prescription"  HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>


            <Border Grid.Row="1" Style="{StaticResource BorderDefault}" Padding="10" Margin="0,10,5,0" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Basic information" Style="{StaticResource MediumHeader}"/>
                    <input:InputControl Grid.Row="1" Text="{Binding Prescription.Appointment.Pet.Client, Converter={StaticResource FullNameConverter}}" IsEnabled="False"/>
                    <input:InputControl Grid.Row="2" Text="{Binding Prescription.Appointment.Doctor, Converter={StaticResource FullNameConverter}}" IsEnabled="False"/>
                    <DatePicker Grid.Row="3"/>
                    <input:TextArea Grid.Row="4" Title="Instructions" Placeholder="Enter instructions..." Margin="0,5,0,0"/>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Grid.Row="1" Margin="5,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Style="{StaticResource BorderDefault}" Padding="5" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Selected Drugs" Style="{StaticResource MediumHeader}" Margin="0,0,0,5"/>

                        <DataGrid
                            ItemsSource="{Binding PrescriptionDrugs, Mode=TwoWay}"
                            SelectionMode="Single"
                            AutoGenerateColumns="False"
                            Style="{StaticResource CustomDataGridStyle}" 
                            RowStyle="{StaticResource CustomDataGridRowStyle}" 
                            CellStyle="{StaticResource CustomDataGridCellStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Dosage Form" Binding="{Binding DosageForm}"/>
                                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}"/>
                                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="Dosage Instructions" Binding="{Binding DosageInstructions}" Width="*"/>
                                <DataGridTextColumn Header="Actions"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource BorderDefault}" Padding="5" CornerRadius="8" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="List of drugs" Style="{StaticResource MediumHeader}"/>
                        <DataGrid 
                             ItemsSource="{Binding Drugs, Mode=TwoWay}"
                             SelectedItem="{Binding SelectedDrug}"
                             SelectionMode="Single"
                             AutoGenerateColumns="False"
                             Style="{StaticResource CustomDataGridStyle}" 
                             RowStyle="{StaticResource CustomDataGridRowStyle}" 
                             CellStyle="{StaticResource CustomDataGridCellStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding AddDrugToPrescriptionCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Dosage Form" Binding="{Binding DosageForm}"/>
                                <DataGridTextColumn Header="Manufacturer" Binding="{Binding Manufacturer}"/>
                                <DataGridTextColumn Header="Stock Quantity" Binding="{Binding Quantity}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
