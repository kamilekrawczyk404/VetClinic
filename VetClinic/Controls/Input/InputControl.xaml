<UserControl x:Class="VetClinic.Controls.Input.InputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VetClinic.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="Root"  >

    <Grid Margin="0,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border 
            Grid.Row="0" 
            Background="{DynamicResource White}" 
            CornerRadius="5,5,0,0" 
            HorizontalAlignment="Left" 
            Padding="12,2"
            BorderBrush="{DynamicResource Red}"
            BorderThickness="1"
            Visibility="{Binding Path=ErrorMessage, ElementName=Root, Converter={StaticResource TextToVisibilityConverter}}"
            >
            <TextBlock
                x:Name="PART_ErrorMessageTextBlock"
                Text="{Binding Path=ErrorMessage, Mode=TwoWay, ElementName=Root, UpdateSourceTrigger=PropertyChanged}"
                Foreground="{DynamicResource Red}"
                FontWeight="SemiBold"
                HorizontalAlignment="Left"
            />
        </Border>
        
        <Border 
            Grid.Row="1" 
            x:Name="PART_Border"
            Background="{DynamicResource White}"
            BorderBrush="{DynamicResource LightGray}"
            BorderThickness="1"
            Padding="10"
        >
            <Grid>
                <TextBlock
                    x:Name="PART_Placeholder"
                    Text="{Binding Path=Placeholder, ElementName=Root}" 
                    IsHitTestVisible="False"
                    Foreground="{DynamicResource LightGray}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="4,0,0,0"
                    />
                <TextBox
                    x:Name="PART_TextBox"
                    Text="{Binding Path=Text,
                                   ElementName=Root,
                                   UpdateSourceTrigger=PropertyChanged}"
                    Background="Transparent"
                    Foreground="{DynamicResource Gray}"
                    BorderThickness="0"
                    Padding="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    TextChanged="PART_TextBox_TextChanged"  Loaded="PART_TextBox_Loaded" /> 
            </Grid>
        </Border>
    </Grid>
</UserControl>