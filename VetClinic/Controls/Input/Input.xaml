<UserControl x:Class="VetClinic.MVVM.View.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinic.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="PART_Border"
            Background="{DynamicResource White}"
            BorderBrush="{DynamicResource Gray}"
            BorderThickness="1"
            CornerRadius="3"
            Padding="4"
            Margin="0,10"
            >
        <Grid>
            <TextBlock 
                x:Name="PART_Placeholder"
                Text="{Binding ElementName=Root, Path=PlaceholderText}"
                Foreground="{DynamicResource White}"
                IsHitTestVisible="False"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="4,0,0,0"
            />
            <TextBox 
                x:Name="PART_TextBox"
                Background="Transparent"
                BorderThickness="0"
                Padding="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
            />
        </Grid>
    </Border>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="GotFocus" SourceName="PART_TextBox">
            <BeginStoryboard>
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Placeholder"
                                                 Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0">
                            <DiscreteObjectKeyFrame.Value>
                                <Visibility>Collapsed</Visibility>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="LostFocus" SourceName="PART_TextBox">
            <BeginStoryboard>
                <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_Placeholder"
                                                 Storyboard.TargetProperty="Visibility">
                        <DiscreteObjectKeyFrame KeyTime="0">
                            <DiscreteObjectKeyFrame.Value>
                                <Visibility>Visible</Visibility>
                            </DiscreteObjectKeyFrame.Value>
                        </DiscreteObjectKeyFrame>
                    </ObjectAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
