<UserControl x:Class="VetClinic.Controls.AddButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinic.Controls"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border 
        VerticalAlignment="Top" 
        HorizontalAlignment="Center"
        BorderBrush="{StaticResource Gray}"
        BorderThickness="1"
        Margin="0,2"
        Padding="1"
        CornerRadius="2">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource BorderStatusCompleted}"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=Root}" Value="False">
                        <Setter Property="Background" Value="{DynamicResource LightGray}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Button
            Command="{Binding Command, ElementName=Root}"
            CommandParameter="{Binding CommandParameter, ElementName=Root}" 
            VerticalAlignment="Center"
            Focusable="False"
            HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Image Source="/Images/DataGrid/add.png" Height="14" Width="14"/>
        </Button>
    </Border>
</UserControl>
