<UserControl
    x:Class="VetClinic.Controls.ActiveDoctors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VetClinic.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Padding="15"
        Background="{StaticResource White}"
        CornerRadius="10">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,15"
                Style="{StaticResource MediumHeader}"
                Text="Active Doctors" />

            <!--  Main content area with scroll  -->
            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Disabled"
                VerticalScrollBarVisibility="Hidden">

                <ItemsControl ItemsSource="{Binding Doctors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,0,0,8"
                                Padding="12"
                                Background="{StaticResource White}"
                                BorderBrush="{StaticResource Gray}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource Black}">
                                        <Run Text="{Binding Name}" />
                                        <Run Text=" " />
                                        <Run Text="{Binding Surname}" />
                                    </TextBlock>

                                    <TextBlock
                                        Margin="0,2,0,0"
                                        FontSize="12"
                                        FontStyle="Italic"
                                        Foreground="{StaticResource Gray}"
                                        Text="{Binding Specialization}" />

                                    <TextBlock
                                        Margin="0,2,0,0"
                                        FontSize="11"
                                        Foreground="{StaticResource Gray}"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap"
                                        Visibility="{Binding Description, Converter={StaticResource TextToVisibilityConverter}}" />

                                    <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
                                        <Ellipse
                                            Width="8"
                                            Height="8"
                                            VerticalAlignment="Center"
                                            Fill="{StaticResource DarkTurquise}" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            FontSize="11"
                                            Foreground="{StaticResource Gray}"
                                            Text="Active" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--  Status messages (Loading/Empty)  -->
            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <!--  Loading state  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    FontStyle="Italic"
                    Foreground="{StaticResource Gray}"
                    Text="Loading doctors..."
                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <!--  Empty state  -->
                <TextBlock
                    HorizontalAlignment="Center"
                    FontStyle="Italic"
                    Foreground="{StaticResource Gray}"
                    Text="No active doctors found"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>